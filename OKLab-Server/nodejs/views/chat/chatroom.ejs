<!DOCTYPE html>
<html >
  <head>
    <title>Chat Room(<%= room.title %>)</title>
    <% include ../partials/head %>
    <link rel="stylesheet" href="/stylesheets/chatstyle.css">
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
      <div class="container clearfix">
        <div class="chat">
          <div class="chat-header clearfix">
            <img src="<%= user.picture %>" alt="avatar">
            <div class="chat-about">
              <div class="chat-room"><%= room.title %></div>
              <div class="chat-num-users"> User(s)</div>
            </div>
            <i class="fa fa-users"></i>
          </div> <!-- end chat-header -->

          <div class="chat-history">
            <ul>
            </ul>
          </div> <!-- end chat-history -->

          <div class="chat-message clearfix">
            <textarea name="message" placeholder ="Type your message" rows="3"></textarea>
            <button type="submit">Send</button>
          </div> <!-- end chat-message -->
        </div> <!-- end chat -->

        <div class="controls">
            <a href="/chat/rooms" class="logout-btn">EXIT</a>
            <a class="rooms-btn">&nbsp;</a>
        </div>

        <div class="users-list">
          <ul class="list">
          </ul>
        </div>
      </div> <!-- end container -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
    <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
    <script src="/javascripts/chat.js"></script>
    <script>
    $(function(){app.chat('<%= room.id %>', '<%= user.userName %>')});
    </script>
  </body>
</html>
