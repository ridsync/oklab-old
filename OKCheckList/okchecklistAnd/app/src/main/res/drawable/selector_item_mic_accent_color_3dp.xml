<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
android:enterFadeDuration="150"
android:exitFadeDuration="100">

<item android:state_checked="true">
    <shape android:shape="rectangle" android:visible="true">
        <stroke android:width="1dp" android:color="@color/main_accent_color" />
        <solid android:width="1dp" android:color="@color/main_accent_color" />
        <corners android:radius="3dp" />
    </shape>
</item> <!-- focused -->
<item>
    <shape android:shape="rectangle" android:visible="true">
        <stroke android:width="1dp" android:color="@color/edit_gray_color" />
        <solid android:width="1dp" android:color="@color/edit_gray_color" />
        <corners android:radius="3dp" />
    </shape>
</item><!-- default -->
</selector>