<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorControlHighlight" >
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle" android:visible="true">
                    <stroke android:width="1dp" android:color="@color/item_higglight_color" />
                    <solid android:width="1dp" android:color="@color/item_higglight_color" />
                    <corners android:radius="90dp" />
                </shape>
            </item> <!-- focused -->
            <item>
                <shape android:shape="rectangle" android:visible="true">
                    <stroke android:width="1dp" android:color="@color/main_accent_color" />
                    <solid android:width="1dp" android:color="@color/main_white_color" />
                    <corners android:radius="90dp" />
                </shape>
            </item><!-- default -->
        </selector>
    </item>
</ripple>