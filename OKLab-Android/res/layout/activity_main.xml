<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ha"
    android:orientation="vertical"
    android:padding="8dip" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OKLAB-Android"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:shadowColor="@color/font_style_gray_04"
        android:shadowRadius="1"
        android:shadowDx="1"
        android:shadowDy="1"
        android:padding="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_no0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/opacity_50"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:onClick="startActivityLifeCycle"
                android:text="LifeCycle(Activity)" />
            <Button
                android:id="@+id/btn_no1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/opacity_50"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:onClick="startActivityFragment"
                android:text="LifeCycle(Fragment)" />
            <Button
                android:id="@+id/btn_no2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/opacity_50"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:onClick="startActivityTwitter"
                android:text="OK트위터" />
                        
            <Button
                android:id="@+id/btn_no3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/opacity_50"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:onClick="startActivityEvents"
                android:text="터치이벤트" />
            <Button
                android:id="@+id/btn_no4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/opacity_50"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:onClick="startActivityViews"
                android:text="이미지뷰" />
			<Button
                android:id="@+id/btn_no5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/opacity_50"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:onClick="startActivityManagment"
                android:text="테스크관리등" />
            <Button
                android:id="@+id/btn_no6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/opacity_50"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:onClick="startActivityWebView"
                android:text="WebView" />
            <Button
                android:id="@+id/btn_no7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/opacity_50"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:onClick="startActivityPlayer"
                android:text="동영상 플레이어" />
            
 			<Button
                android:id="@+id/btn_no8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/opacity_50"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:onClick="startActivityCR"
                android:text="ContentResolver" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>